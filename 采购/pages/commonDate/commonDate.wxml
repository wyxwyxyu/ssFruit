<view style="position:fixed;bottom:0;width:700rpx;left:100rpx">
  <picker-view style="width: 100%; height: 530rpx;" value="{{value}}" bindchange="bindChange">
      <picker-view-column style="line-height:34px;">
        <view wx:for="{{years}}">{{item}}年</view>
      </picker-view-column>
      <picker-view-column style="line-height:34px;">
        <view  wx:for="{{months}}">{{item}}月</view>
      </picker-view-column>
      <picker-view-column style="line-height:34px;">
        <view wx:for="{{days}}">{{item}}日</view>
      </picker-view-column>
    </picker-view>
    <view style="width:100%;background:white;">
      <view class="wmp">
        <text style='color:#666;text-align:left' bindtap="list">取消</text>
        <text style='color:green;text-align:right' bindtap="listConfirm">确定</text>
      </view>
    </view>
</view>
    
