.table {
  display: flex;
  flex-direction: column;
  border-style: solid solid solid solid;
  border-color: gray;
  border-width: 1rpx;
  margin-top: 15rpx;
  margin-bottom: 40rpx;
  margin-left: 8rpx;
  margin-right: 8rpx;
  height: 250rpx;
}

.word {
  width: 100%;
  height: 200rpx;
  text-align: center;
  font-size: 100rpx;
  line-height: 250rpx;
  /* background-color: gray; */
}

.mini {
  width: 95%;
  height: 50rpx;
  /* background-color: lightgray; */
  font-size: 35rpx;
  text-align: right;
}

.last {
  display: flex;
  justify-content: center;
  height: 100rpx;
  width: 100%;
  position: fixed;
  bottom: 20rpx;
}

.button {
  color: black;
  font-size: 42rpx;
  width: 100%;
  line-height: 100rpx;
  border-top: solid;
  border-top-color: lightgray;
  border-top-width: 1rpx;
  text-align: center;
}

.touch-item {
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #ccc;
  width: 100%;
  overflow: hidden;
}

.del {
  background-color: orangered;
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.touch-move-active .content, .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}
.content {

width: 100%;

padding: 10px;

line-height: 22px;

margin-right:0;

-webkit-transition: all 0.4s;

transition: all 0.4s;

-webkit-transform: translateX(90px);

transform: translateX(90px);

margin-left: -90px

}